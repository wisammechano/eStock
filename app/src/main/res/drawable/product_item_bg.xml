<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <gradient android:startColor="#e0e0e0"
                android:endColor="#9e9e9e"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="2dp"
        android:top="1dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="270"
                android:endColor="#f5f5f5"
                android:startColor="#fff"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>